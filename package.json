{
  "name": "nest-lint-tools",
  "version": "0.0.1",
  "description": "A schematics to install dependencies and elsint plugins to enforce code quality",
  "scripts": {
    "copy-files": "cpx ./schematics/**/{schema.json,files/**,collection.json} ./dist/schematics",
    "prebuild": "rimraf dist",
    "build:watch": "tsc -p tsconfig.schematics.json --watch",
    "build": "tsc -p tsconfig.schematics.json",
    "postbuild": "npm run copy-files",
    "test": "npm run build && jasmine src/**/*_spec.js",
    "manual-test:dry-run": "schematics .:nest-add",
    "manual-test": "schematics .:nest-add --dry-run=false",
    "lint": "eslint \"{src,schematics}/**/*.ts\" --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "schematics",
    "nestjs",
    "lint"
  ],
  "author": "Connie Leung",
  "license": "MIT",
  "schematics": "./dist/schematics/collection.json",
  "nest-add": {
    "save": "devDependencies"
  },
  "dependencies": {
    "@angular-devkit/core": "^14.0.0",
    "@angular-devkit/schematics": "^14.0.0",
    "@schematics/angular": "^14.0.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.7.2"
  },
  "devDependencies": {
    "@types/jasmine": "~4.0.0",
    "@types/node": "^14.15.0",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "cpx": "^1.5.0",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jasmine": "^4.0.0",
    "prettier": "2.6.2",
    "ts-node": "^10.8.1"
  }
}
